<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.andy.shop.mapping.MessageMapper">
 
  <resultMap id="BaseResultMap" type="org.andy.shop.model.Message">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="msg_name" jdbcType="VARCHAR" property="msgName" />
    <result column="msg_price" jdbcType="DECIMAL" property="msgPrice" />
    <result column="publish_time" jdbcType="DATE" property="publishTime" />
    <result column="msg_type" jdbcType="TINYINT" property="msgType" />
    <result column="province_id" jdbcType="INTEGER" property="provinceId" />
    <result column="city_id" jdbcType="INTEGER" property="cityId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>
 
  <sql id="Base_Column_List">
    id, msg_name, msg_price, publish_time, msg_type, province_id, city_id, create_time, 
    update_time
  </sql>
  
  <!-- 分页查询，资源列表 -->
  <select id="getMessagesByDto" resultMap="BaseResultMap"
		parameterType="org.andy.shop.model.dto.MessageDto">
		SELECT
		<include refid="Base_Column_List" />
		from w_message
		<where>
			<include refid="queryMessagesInfoDTO" />
		</where>
		ORDER BY
		create_time DESC
		LIMIT
		#{start}, #{rows}
	</select>
	<!-- 分页查询，资源总数 -->
  	<select id="countMessagesByDto" resultType="java.lang.Integer"
		parameterType="org.andy.shop.model.dto.MessageDto">
		SELECT
		count(1)
		from w_message
		<where>
			<include refid="queryMessagesInfoDTO" />
		</where>
	</select>
	<!-- 分页查询条件参数 -->
	<sql id="queryMessagesInfoDTO">
		<if test="msgName != null and msgName !=''">
			and msg_name like '%${msgName}%'
		</if>
		<if test="msgType != null and msgType !=''">
			and msg_type = #{msgType}
		</if>
		<if test="publishStartTime != null and publishStartTime !=''">
			and publish_time <![CDATA[ >= ]]> #{publishStartTime}
		</if>
		<if test="publishEndTime != null and publishEndTime !=''">
			and publish_time <![CDATA[ <= ]]> #{publishEndTime}
		</if>

	</sql>
</mapper>